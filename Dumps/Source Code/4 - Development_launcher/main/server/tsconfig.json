{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"noUncheckedIndexedAccess": true,
		"rootDir": "src"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"],
}
