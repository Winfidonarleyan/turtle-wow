{
	"name": "turtle-launcher",
	"version": "1.0.0",
	"description": "An Electron application for launching and updating TurtleWoW client",
	"author": "Maroš Beťko (Haaxor1689)",
	"main": "./out/main/index.js",
	"scripts": {
		"start": "electron-vite preview",
		"dev": "electron-vite dev",
